<%- include("partials/header") %>
    <section class="contact-us" id="contact-section">
        <div class="container-fluid" style="color: white; font-weight: 900;">
            <div class="row">
                <div class="col">
                    <form id="contact" action="/view/<%= fromUser._id %>/<%= toUser._id %>?_method=PUT" method="POST"
                        onsubmit="alert('Credits Transferred Successfully')">
                        <i class="fa fa-arrow-right fa-5x"
                            style="position: absolute; margin-top: 0%; margin-left: -25px;" aria-hidden="true"></i>
                        <div class="row">
                            <div class="col-sm-6 transfer-1">
                                <h4>Transferring From: <span>
                                        <%= fromUser.name %>
                                    </span></h4>

                                <span>Credits: <%= fromUser.credits %>
                                </span>

                            </div>
                            <div class="col-sm-6 transfer-2">

                                <h4>Transferring To: <span>
                                        <%= toUser.name %>
                                    </span> </h4>

                                <span>Credits: <%= toUser.credits %>
                                </span>
                            </div>
                        </div>
                        <div class="row" style="margin-top: 7%;">
                            <div class="col-md-4 col-md-offset-4 text-center">
                                <fieldset>
                                    <input name="credit" type="number" class="form-control" id="credit"
                                        placeholder="Amount" required="" value="">
                                </fieldset>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4 text-center">
                                <fieldset>
                                    <button type="submit" id="form-submit" class="btn btn-warning">Send it now</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>


    <%- include("partials/footer") %>